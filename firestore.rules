rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'sonu28281@gmail.com';
    }
    
    // Rooms collection - Admin only for write, read for authenticated users
    match /rooms/{roomId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Tenants collection - Admin only
    match /tenants/{tenantId} {
      allow read: if isAuthenticated() || 
                     (exists(/databases/$(database)/documents/tenants/$(tenantId)) && 
                      resource.data.uniqueToken == request.auth.token.uniqueToken);
      allow write: if isAdmin();
    }
    
    // Monthly records - Admin write, tenant can read their own
    match /monthlyRecords/{recordId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Electricity readings - Admin only
    match /electricityReadings/{readingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Payments - Admin only
    match /payments/{paymentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Bank accounts - Admin only
    match /bankAccounts/{accountId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Maintenance - Admin only
    match /maintenance/{maintenanceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Settings - Admin only
    match /settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Import logs - Admin only
    match /importLogs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Logs - Admin only
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
