rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'sonu28281@gmail.com';
    }
    
    // Rooms collection - Allow public read (for tenant portal), admin write
    match /rooms/{roomId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Tenants collection - Allow public read (tenant portal validates uniqueToken in app)
    // Tenants can update their own kycStatus via onboarding flow
    match /tenants/{tenantId} {
      allow read: if true;
      allow write: if isAdmin();
      allow update: if true;  // ✅ KYC onboarding updates kycStatus (token-validated in app)
    }

    // Explicit deny for any client-side write to nested kyc object (backend Admin SDK bypasses rules)
    match /tenants/{tenantId}/kyc/{docId} {
      allow read: if isAuthenticated() && (request.auth.uid == tenantId || isAdmin());
      allow write: if false;
    }
    
    // Monthly records - Allow public read (for tenant portal), admin write
    match /monthlyRecords/{recordId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Payments - Allow public read (for tenant portal), admin write
    match /payments/{paymentId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Electricity readings - Allow public read (for tenant portal), admin write
    match /electricityReadings/{readingId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Bank accounts - Allow public read (tenant portal shows UPI for payments), admin write
    match /bankAccounts/{accountId} {
      allow read: if true;  // ✅ Tenant portal shows active UPI details
      allow write: if isAdmin();
    }
    
    // Maintenance - Admin only
    match /maintenance/{maintenanceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Settings - Allow public read, admin write
    match /settings/{settingId} {
      allow read: if true;  // ✅ May be needed for tenant portal
      allow write: if isAdmin();
    }

    // Payment submission queue - tenant submits, admin verifies
    match /paymentSubmissions/{submissionId} {
      allow read: if true;
      allow write: if true;
    }

    // Tenant KYC profiles - write allowed for onboarding (app-level security via tenant tokens)
    match /tenantProfiles/{tenantId} {
      allow read: if true;
      allow write: if true;  // ✅ Tenant onboarding writes KYC data, token-validated in app
    }

    // Tenant applications - public write (for standalone onboarding), admin read/write
    match /tenantApplications/{applicationId} {
      allow read: if isAdmin();
      allow create: if true;  // Anyone can submit an application
      allow update, delete: if isAdmin();
    }

    // Import logs - Admin only
    match /importLogs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Logs - Admin only
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
