rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.email == 'sonu28281@gmail.com';
    }
    
    // Rooms collection - Allow public read (for tenant portal), admin write
    match /rooms/{roomId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Tenants collection - Allow public read (tenant portal validates uniqueToken in app), admin write
    match /tenants/{tenantId} {
      allow read: if true;  // ✅ Tenant portal validates token in application code
      allow write: if isAdmin();
    }
    
    // Monthly records - Allow public read (for tenant portal), admin write
    match /monthlyRecords/{recordId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Payments - Allow public read (for tenant portal), admin write
    match /payments/{paymentId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Electricity readings - Allow public read (for tenant portal), admin write
    match /electricityReadings/{readingId} {
      allow read: if true;  // ✅ Tenant portal needs this
      allow write: if isAdmin();
    }
    
    // Bank accounts - Allow public read (tenant portal shows UPI for payments), admin write
    match /bankAccounts/{accountId} {
      allow read: if true;  // ✅ Tenant portal shows active UPI details
      allow write: if isAdmin();
    }
    
    // Maintenance - Admin only
    match /maintenance/{maintenanceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Settings - Allow public read, admin write
    match /settings/{settingId} {
      allow read: if true;  // ✅ May be needed for tenant portal
      allow write: if isAdmin();
    }

    // Payment submission queue - tenant submits, admin verifies
    match /paymentSubmissions/{submissionId} {
      allow read: if true;
      allow write: if true;
    }

    // Import logs - Admin only
    match /importLogs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Logs - Admin only
    match /logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
